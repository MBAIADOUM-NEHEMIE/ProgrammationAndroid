<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vues.MainActivity"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="@drawable/sourir"
    android:padding="8dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:foregroundGravity="left"
        android:layout_gravity="right"
        android:layout_margin="2dp"
        android:padding="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <RadioGroup
                android:id="@+id/grpRadiobtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/btnRadioH"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" Homme "
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/btnRadioF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Femme "
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:layout_margin="1dp"/>
            </RadioGroup>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">


                <TextView
                    android:id="@+id/textVpoids"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="poids : "
                    android:textSize="20dp"
                    android:layout_weight="1"
                    />

                    <EditText
                        android:id="@+id/editTpoids"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Poids ici"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:ems="100"
                        android:inputType="numberSigned"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textVtaille"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Taille : "
                    android:textSize="20dp"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/editTtaille"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="taille ici"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:ems="100"
                    android:inputType="numberSigned"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textVage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age : "
                    android:textSize="20dp"
                    android:layout_weight="1"
                    />

                <EditText
                    android:id="@+id/editTage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Age ici"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:ems="100"
                    android:inputType="numberSigned"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnCalculer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULER"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#FFD50000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgEmoj"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            tools:src="@tools:sample/avatars"
            tools:srcCompat="@drawable/sourir" />

        <TextView
            android:id="@+id/textVemoji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="20dp"
            android:textColor="#FFFd5000"
            android:layout_margin="4dp"
            />


    </LinearLayout>


</LinearLayout>